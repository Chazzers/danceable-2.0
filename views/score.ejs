<!DOCTYPE html>
<html>
<%- include('partials/head.ejs') %>

<body>
	<%- include('partials/header.ejs') %>
	<div id="root">
		<main class="loading">
			<a class="playlist">
				<article>
					<h3><%= playlist.name %></h3>
					<img src="<%= playlist.images[0] ? playlist.images[0].url : './assets/images/music-icon.png' %>" alt="">
				</article>
			</a>
			<div class="loading-animation">
				<h2>The danceability of your playlist is: </h2>
				<div class="score">
					<h1><%= score %><span>/100</span></h1>
				</div>
			</div>
		</main>
		<a class="btn" href="/playlists">Measure another playlist</a>
	</div>
	<%- include('partials/script.ejs') %>
</body>
</html>